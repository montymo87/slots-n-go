extends ../layout/layout

block vars
	//- include ../templates/project-vars
	- array = {body_class:'', layout_mod:'', sub_keywords:'', title_inner:'Index', template_name: 'index'}

block content_block
	section.section.sign-hero
		+picture({
			media: 768,
			is2x: false,
			img: `bg.jpg`,
			img_mob: 'bg-mobile.jpg',
			class: 'sign-hero__bg_img_w',
			img_class: 'sign-hero__bg_img',
			alt: 'some image',
		})
		.sign-hero__in
			+picture({
				img: `logo.svg`,
				class: 'sign-hero__logo_img_w',
				img_class: 'sign-hero__logo_img',
				alt: 'some image',
			})
			.sign-hero__descr
				+picture({
					media: 768,
					is2x: false,
					img_mob: 'descr-mob.png',
					img: `descr.png`,
					class: 'sign-hero__descr_img_w',
					img_class: 'sign-hero__descr_img',
					alt: 'some image',
				})
			.sign-hero__form_w
				+picture({
					img: `ppl-mob.png`,
					class: 'sign-hero__ppl_img_w',
					img_class: 'sign-hero__ppl_img',
					alt: 'some image',
				})
				.c-main__reg.c-reg
					.c-reg__title Sign Up and get your Bonus!
					.c-reg__form
						form#formReg.c-form.c-form-light(novalidate='' autocomplete='off' action='#' onsubmit='return false;' method='post')
							input(type='hidden' name='nnBonus' value='1')
							input(type='hidden' name='bonusProductType' value='casino')
							input(type='hidden' name='selectedLanguage' value='en')
							.c-form__tabs
								button.c-form__tab.js-tab-type-change.active(data-type='phone' type='button')
									| Phone
								button.c-form__tab.js-tab-type-change(data-type='email' type='button')
									| Email
							.c-form__group.c-phone-email
								.phone_code.label_tel
									span.phone_code__flag
										img#flag_img.phone_code__flag_img(src='https://start.slotsngo.io/common/global-phone-mask/dist/flags/in.svg' alt='in')
									select#phone_code.phone_code__select(name='')
										option(value='+91(XXXX) XXX - XXX' data-mask='+91(XXXX) XXX - XXX' data-countrykey='IND' data-countrycode='IN') India
								.c-form__input-wrap.phone-email-input
									a.c-form__icon.js-btn-type-change(href='#' data-type='phone')
										span.icon-email(style='display: none ')
									input#phone.c-form__input.reg-field-phone(type='tel' inputmode='decimal' name='phone' data-name='tel' data-valid='false' required='required' placeholder='Телефон')
									label.c-form__group-label.group-label-phone-email.focused.change-label-type(for='phone') Phone
									.emailMessages
							#phoneError.phoneMessages(style='display: none')

							.c-form__group
								.c-form__group
									a.c-form__icon.js-btn-toggle-pass(href='#')
										span.icon-eye-closed
									a.c-form__icon.c-form__icon-second.js-btn-clear-pass(href='#')
										span.icon-clear-filled
									input#password.c-form__input.js-password.pm-reg-field-password(autocomplete='password' type='password' name='password' placeholder='Password' required='required')
									label.c-form__group-label(for='password') Password
								.passwordMessages

							.c-form__group
								a(href="#").sign-hero__promocode I have a Promo Code

							.c-form__group.focused
								.cuSelect
									span.icon.icon-arrows
									label.c-form__group-label.focused(for='defaultCurrency' style='opacity: 1;') Currency
									select#defaultCurrency.pm-reg-field-currency(name='defaultCurrency')
										option(ref='disabled' disabled='disabled') Select currency
										option(value='INR')  INR
										option(value='USD')  USD
							// <div class="c-form__group">
							// <div class="c-form__checkbox">
							// <input type="checkbox" name="isBonusActivated" id="get-bonus" checked="checked" class="pm-reg-field-isbonusactivated">
							// <label for="get-bonus">
							// Activate deposit bonus<br>
							// <a href="#" data-toggle="modal" data-target="#modalTerms" data-dismiss="modal"
							// class="rlink small pm-reg-bonus-rules">Bonus Terms and Conditions</a>
							// </label>
							// </div>
							// </div>
							.c-form__text
								p
									| By continuing I confirm that I am over 18 years old and agree
									a(href='#' data-toggle='modal' data-target='#modalOffers' data-dismiss='modal') Offer agreement
									|  and
									a(href='#' data-toggle='modal' data-target='#modalTerms' data-dismiss='modal') Bonus Terms and Conditions
							#errormsg.c-form__error.js-form-error(style='display: none;')
							.c-form__footer
								button.c-btn.c-btn--large.reg-field-submit(type='submit' disabled='')
									span.c-btn__text Sign up

							.sign-hero__divider or

							.sign-hero__btn_w
								button.c-btn.c-btn--large.c-btn--icon
									span.c-btn__icon_w
										img(src="../images/google.svg", alt="")
									span.c-btn__text Continue with Google

							//- .c-form__acc
							//- 	| Do you have an account?
							//- 	a(href='https://slotsngo.io/') Login
